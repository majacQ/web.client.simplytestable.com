<div class="navbar navbar-inverse navbar-fixed-top">    
    <div class="navbar-inner">

        <div class="container">
            <div class="row-fluid">
                <div class="span12">
                    <a class="brand" href="{{ public_site['urls']['home'] }}">
                        SimplyTestable
                    </a>
                    <ul class="nav">
                        <li class="active"><i class="icon icon-play-circle"></i> <a href="{{ path('app') }}">Start a new website test</a></li>
                        <!--
                        <li><a href="#">Link</a></li>
                        <li><a href="#">Link</a></li>
                        -->
                    </ul> 
                    {% if is_logged_in %}
                    <div class="pull-right sign-out-form">
                        <form class="form-inline" method="post" action="{{ path('sign_out_submit') }}">
                            <p class="navbar-text">                                
                                <a href="{{ path('user', {'email':user.username}) }}" class="navbar-link">
                                    <i class="icon icon-user"></i>
                                    {{ user.username }}
                                </a>
                                <button class="btn btn-small btn-primary" type="submit">
                                    Sign out
                                    <i class="icon icon-caret-right"></i>
                                </button>
                            </p>                        
                        </form>  
                    </div> 

                    {% else %}
                    <p class="navbar-text pull-right">
                        <a href="{{ path('sign_in') }}" class="navbar-link"><i class="icon icon-user"></i> Sign in</a>
                    </p>                    
                    {% endif %}                       
                </div>
            </div>
        </div>

    </div>
