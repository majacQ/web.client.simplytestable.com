{% set action_icon %}
    {% if app.request.attributes.get('_route') == 'app_results' %}icon icon-caret-down{% else %}{% endif %}
{% endset %}
    
<div class="span2">
    <div class="summary-container summary-figure {% if test.errorCount > 0 %}success-container{% else %}error-container{% endif %}">    
    {% if remote_test.errorfreetaskcount > 0 %}
        <a href="{{ path('app_results', { 'website': test.website, 'test_id': test.testId }) }}?filter=without-errors#test-list"><span class="count">{{ remote_test.errorfreetaskcount }}</span> <span class="stat-label">test{% if remote_test.errorfreetaskcount != 1 %}s{% endif %} without errors</span><i class="{{ action_icon }}"></i></a>
    {% else %}
        <span class="anchor"><span class="count">{{ remote_test.errorfreetaskcount }}</span> <span class="stat-label">tests without errors</span><i class="icon icon-{% if test.errorCount > 0 %}remove{% else %}ok{% endif %}"></i></span>                    
    {% endif %}            
    </div>    
</div>            