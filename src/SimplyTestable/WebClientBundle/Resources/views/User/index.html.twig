{% extends 'SimplyTestableWebClientBundle::App/single-page-dialog.html.twig' %}

{% block title %}Sign in - {{ parent() }}{% endblock %}

{% block content %}

<h1>Sign in</h1>
<!--
<p>
    Keep track of the tests you've started, find past test
    results, easily re-test when you make changes.
</p>
-->

    {% if user_signin_error is defined and user_signin_error != '' %}    
        {% if user_signin_error == 'invalid-user' %}
        <div class="alert alert-info for:input-email">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <p>
                <strong>Hello!</strong>
            </p>
            <p>
                There's no account for <strong>{{ email }}</strong>.
                Good news - we can do that for you if you like.
            </p>
            <form class="form-horizontal" method="get" action="{{ path('sign_up') }}">
                <div> 
                    <input type="hidden" name="email" value="{{ email }}" />
                    <button class="btn btn-success" type="submit">Yes, sign me up please!</button>
                </div>      
            </form>
        </div>                
        {% endif %}
    {% endif %}

    {% if user_signin_confirmation is defined and user_signin_confirmation != '' %}    
        {% if user_signin_confirmation == 'user-activated' %}
        <div class="alert alert-success for:input-email">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <p>
                <strong>Yippee!</strong>
            </p>
            <p>
                Your account is now activate. Go ahead, sign in and enjoy.
            </p>
        </div>                
        {% endif %}
    {% endif %}

<form class="form-horizontal" method="post" action="{{ path('sign_in_submit') }}">
        {% if user_signin_error is defined and user_signin_error != '' %}
            {% if user_signin_error == 'blank-email' %}
        <div class="alert alert-error for:input-email">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <strong>Slow down!</strong> You're going to have to enter in your email address to sign in.
        </div>                
            {% endif %}                                                   
        
            {% if user_signin_error == 'blank-password' %}
        <div class="alert alert-error for:input-email">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <strong>Slow down!</strong> You're going to have to enter in your password to sign in.
        </div>                
            {% endif %}         
        
            {% if user_signin_error == 'public-user' %}
        <div class="alert alert-info for:input-email">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <p>
                <strong>Hello!</strong>
            </p>
            <p>
                You're trying to sign in as the public user.
            </p>
            <p>
                The public user is special, you're not allowed to sign in as it.
            </p>
        </div>                
            {% endif %}        
        
            {% if user_signin_error == 'user-not-enabled' %}
        <div class="alert alert-info for:input-email">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <p>
                <strong>Hello!</strong>
            </p>
            <p>
                You've not yet activated your account.
            </p>
            <p>
                We've emailed an activation code to <strong> {{ email }}</strong>.
            </p>
            <p>
                Follow the instructions in the email to activate your account. Once
                you've done that, you can sign in.
            </p> 

        </div>               
            {% endif %}         
        {% endif %}    
    
    <div class="larger">
        <label for="email">Email</label>
        <input type="text" id="email" name="email" placeholder="Enter your email address" {% if email != '' %} value="{{ email }}" {% endif %} />
    </div>
    <div class="larger">
        <label  for="password">Password</label>
        <input name="password" type="password" id="password" placeholder="Enter your password" />
    </div>
    <div>
        <button class="submit btn btn-large btn-primary" type="submit">Sign in!</button>
    </div>
</form>   

<form class="form-horizontal" method="get" action="{{ path('reset_password') }}">
    <div class="input-secondary">                
        <button class="btn" type="submit">I need to reset my password</button>
        <input type="hidden" name="email" value="{{ email }}" />
    </div>      
</form>

{% endblock %}