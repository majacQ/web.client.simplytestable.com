{% if heading is not defined %}
    {% set heading = 'Heading' %}
{% endif %}

{% if id is not defined %}
    {% set id = 'account-required-modal' %}
{% endif %}

<div class="modal" id="{{ id }}">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" data-name="close" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                {% block modal_header %}
                {% endblock %}
            </div>
            <div class="modal-body gridded">
                {% block modal_body %}
                {% endblock %}
            </div>
            <div class="modal-footer">
                <button class="btn btn-default" data-dismiss="modal" data-name="close" aria-hidden="true">
                    Close
                </button>
            </div>
        </div>
    </div>
</div>
