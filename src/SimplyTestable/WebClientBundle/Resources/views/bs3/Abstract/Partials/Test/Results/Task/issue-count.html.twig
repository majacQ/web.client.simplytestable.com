{% if plural_suffix is not defined %}
    {% set plural_suffix = 's' %}
{% endif %}

{% if positive is not defined %}
    {% set positive = 'success' %}
{% endif %}

{% if negative is not defined %}
    {% set negative = 'danger' %}
{% endif %}

{% if count == 0 %}
<span class="label label-{{ count == 0 ? positive : negative }}">
    <span class="count">{{ count|number_format }}</span>
    <span class="name">{{ name }}{% if count != 1 %}{{ plural_suffix }}{% endif %}</span>
    <span class="icon">
        {% if count == 0 %}
            <i class="fa fa-check"></i>
        {% else %}
            <i class="fa fa-caret-down"></i>
        {% endif %}
    </span>
</span>
{% else %}
    <a href="#{{ name }}{% if count != 1 %}{{ plural_suffix }}{% endif %}" class="label label-{{ count == 0 ? positive : negative }}">
        <span class="count">{{ count|number_format }}</span>
        <span class="name">{{ name }}{% if count != 1 %}{{ plural_suffix }}{% endif %}</span>
    <span class="icon">
        {% if count == 0 %}
            <i class="fa fa-check"></i>
        {% else %}
            <i class="fa fa-caret-down"></i>
        {% endif %}
    </span>
    </a>
{% endif %}



