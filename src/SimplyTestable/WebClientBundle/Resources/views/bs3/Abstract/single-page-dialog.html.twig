{% extends 'SimplyTestableWebClientBundle::bs3/base.html.twig' %}

{% set default_dialog_width = 6 %}
{% if dialog_width is not defined %}{% set dialog_width = default_dialog_width %}{% endif %}    

{% set dialog_offset = (12 - dialog_width) / 2 %}

{% block body_class %} single-page-dialog single-page-dialog-{{ dialog_width }} {{ parent() }} {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    
    {% stylesheets    
    '@SimplyTestableWebClientBundle/Resources/assets/bs3/css/single-page-dialog.css'
    filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block body%}
    <div class="container">
        <div class="row">
            {# Center column by setting an offset equal to half of the 
               remaining size of the row. Works for equal column widths only.
            #}
            <div class="col-md-{{dialog_width}} col-md-offset-{{dialog_offset}}">
                <div id="logo"></div>
                <section>
                    <div id="content">{% block content %}{% endblock %}</div>              
                </section>                
            </div>
        </div>
    </div>
{% endblock %}    