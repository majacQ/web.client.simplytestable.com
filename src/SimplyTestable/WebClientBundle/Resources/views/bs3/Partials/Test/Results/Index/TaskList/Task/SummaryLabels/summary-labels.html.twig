{% set is_failed = task.state in ['failed',  'failed-retry-available', 'failed-no-retry-available', 'failed-retry-limit-reached'] %}

{% if task.state == 'completed' %}
    {% include 'SimplyTestableWebClientBundle:bs3/Partials/Test/Results/Index/TaskList/Task/SummaryLabels:completed.html.twig' %}
{% endif %}

{% if task.state == 'skipped' %}
    {% include 'SimplyTestableWebClientBundle:bs3/Partials/Test/Results/Index/TaskList/Task/SummaryLabels:skipped.html.twig' %}
{% endif %}

{% if task.state == 'cancelled' %}
    {% include 'SimplyTestableWebClientBundle:bs3/Partials/Test/Results/Index/TaskList/Task/SummaryLabels:cancelled.html.twig' %}
{% endif %}

{% if is_failed %}
    {% include 'SimplyTestableWebClientBundle:bs3/Partials/Test/Results/Index/TaskList/Task/SummaryLabels:failed.html.twig' %}
{% endif %}

