<div class="row">
    <div class="col-lg-3 col-md-4 meta">
        <div class="row">
            <div class="col-xs-4">
                {% if error.lineNumber > -1 %}
                    <div class="row">
                        <div class="col-xs-6 text">Line</div>
                        <div class="col-xs-6 digit">{{ error.lineNumber }}</div>
                    </div>
                {% endif %}
            </div>
            <div class="col-xs-5 col-xs-offset-1">
                {% if error.columnNumber > -1 %}
                    <div class="row">
                        <div class="col-xs-6 text">Column</div>
                        <div class="col-xs-6 digit">{{ error.columnNumber }}</div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="col-lg-9 col-md-8 content">
        <div class="row">
            <div class="col-xs-12 content-column">
                <p class="content">
                    {{ error }}
                </p>
                {% if (documentation_urls[ loop.index0 ].exists) %}
                    <a class="fix label label-fix" href="{{documentation_urls[ loop.index0 ].url}}">
                        Fix <i class="fa fa-caret-right"></i>
                    </a>
                {% endif %}
            </div>
            {#<div class="col-lg-1 col-md-2">#}
                {#{% if (documentation_urls[ loop.index0 ].exists) %}#}
                    {#<a class="fix label label-fix" href="{{documentation_urls[ loop.index0 ].url}}">#}
                        {#Fix <i class="fa fa-caret-right"></i>#}
                    {#</a>#}
                {#{% endif %}#}
            {#</div>#}
        </div>
    </div>
</div>