<div class="row">
    <div class="col-lg-3 meta">
        <div class="row">
            <div class="col-xs-4">
                {% if error.lineNumber > -1 %}
                    <div class="row">
                        <div class="col-xs-6 text">Line</div>
                        <div class="col-xs-6 digit">{{ error.lineNumber }}</div>
                    </div>
                {% endif %}
            </div>
            <div class="col-xs-5 col-xs-offset-1">
                {% if error.columnNumber > -1 %}
                    <div class="row">
                        <div class="col-xs-6 text">Column</div>
                        <div class="col-xs-6 digit">{{ error.columnNumber }}</div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="col-lg-9 content">
        <span class="message">{{ error }}</span>
        <pre class="prettyprint fragment">{% if error.canFragmentBeTruncated %}{{ error.truncatedFragment }}&hellip;{% else %}{{ error.fragment }}{% endif %}</pre>
        {#<div class="row">#}
            {#<div class="col-lg-12">#}
                {#{{ error }}#}
            {#</div>#}
            {#&#123;&#35;<div class="col-lg-1">&#35;&#125;#}
