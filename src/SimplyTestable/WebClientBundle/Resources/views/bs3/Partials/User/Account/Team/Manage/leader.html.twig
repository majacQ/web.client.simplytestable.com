<div class="account-section">
    <h2 id="members">Members</h2>
</div>

<div class="account-section">
    <h2 id="invites">Outstanding invites</h2>

    {% if invites is defined and invites|length > 0 %}
        <p>
            These invites have yet to be accepted or declined:
        </p>

        <ul class="invites list-unstyled">
            {% for invite in invites %}
                <li class="invite">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 user">
                            {{ invite.user }}
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-4 action remove">
                            <form role="form">
                                <input type="hidden" name="user" value="{{ invite.user }}">
                                <button type="submit" class="btn btn-xs btn-danger">
                                    Remove
                                </button>
                            </form>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-4 action resend">
                            <form role="form">
                                <input type="hidden" name="user" value="{{ invite.user }}">
                                <button type="submit" class="btn btn-xs btn-default">
                                    Re-send
                                </button>
                            </form>
                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>
            There are no outstanding team invites.
        </p>
    {% endif %}

</div>

<div class="account-section">
    <h2 id="invites-send">Send an invite</h2>
</div>

{% if team_invite_get is defined %}
    {% if team_invite_get.status == 'success' %}
        <div class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <p>
                <strong>Yay!</strong>
            </p>

            <p>
                We have emailed an invite to {{ team_invite_get.invitee }}.
            </p>

        </div>
    {% endif %}

    {% if team_invite_get.status == 'error' %}
        {% if team_invite_get.error == 'invite-self' %}
            <div class="alert alert-danger" data-for="email">
                <button type="button" class="close" data-dismiss="alert">×</button>
                <strong>No no no &hellip;</strong>
                You can't invite yourself to join your own team.
            </div>
        {% endif %}

        {% if team_invite_get.error == 'invitee-is-a-team-leader' %}
            <div class="alert alert-danger" data-for="email">
                <button type="button" class="close" data-dismiss="alert">×</button>
                <strong>No no no &hellip;</strong>
                You can't invite {{ team_invite_get.invitee }}, they already belong
                to a different team.
            </div>
        {% endif %}

    {% endif %}
{% endif %}

{% if team.hasMembers %}

{% else %}
    <p>
        Invite anyone to join your team. Everyone on your team can sign in independently
        and share this team account.
    </p>

    <form class="issue-invite" role="form" method="post" action="{{ path('action_user_account_team_invitemember') }}">
        <label for="email">Who would you like to invite?</label>
        <div class="input-group">
            <input type="text" class="form-control" name="email" id="email" placeholder="Email address of new team member">
            <span class="input-group-btn">
                <button type="submit" class="btn btn-default" type="button">Send invite</button>
            </span>
        </div>
    </form>
{% endif %}

