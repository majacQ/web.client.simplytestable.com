{% include 'SimplyTestableWebClientBundle:bs3/Partials/User/Account/Team/Manage:members.html.twig' %}

<div class="account-section">
    <h2 id="invites">Invites</h2>

    {% if invites is defined and invites|length > 0 %}
        <p>
            These invites have yet to be accepted or declined:
        </p>

        <ul class="invites list-unstyled items">
            {% for invite in invites %}
                <li class="invite item">
                    <div class="row">
                        <div class="col-lg-8 col-md-6 col-sm-6 col-xs-12 user">
                            <i class="fa fa-flag"></i>
                            {{ invite.user }}
                        </div>
                        <div class="col-lg-2 col-md-3 col-sm-3 col-xs-4 action remove">
                            <form role="form" method="post" action="{{ path('action_user_account_team_removeinvite') }}">
                                <input type="hidden" name="user" value="{{ invite.user }}">
                                <button type="submit" class="btn btn-xs btn-danger">
                                    Remove
                                </button>
                            </form>
                        </div>
                        <div class="col-lg-2 col-md-3 col-sm-3 col-xs-4 action resend">
                            <form role="form" method="post" action="{{ path('action_user_account_team_resendinvite') }}">
                                <input type="hidden" name="user" value="{{ invite.user }}">
                                <button type="submit" class="btn btn-xs btn-default">
                                    Re-send
                                </button>
                            </form>
                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>
    {% endif %}

    {% if team_invite_get is defined %}
        {% if team_invite_get.status == 'success' %}
            <div class="alert alert-success">
                <button type="button" class="close" data-dismiss="alert">×</button>
                <p>
                    <strong>Yay!</strong>
                </p>

                <p>
                    We have emailed an invite to {{ team_invite_get.invitee }}.
                </p>

            </div>
        {% endif %}

        {% if team_invite_get.status == 'error' %}
            {% if team_invite_get.error in ['invalid-invitee', 'invalid-email'] %}
                <div class="alert alert-danger" data-for="email">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    <strong>Hmmm.</strong> I'm not convinced that <strong>{{ team_invite_get.invitee }}</strong> is a valid email address.
                </div>
            {% endif %}

            {% if team_invite_get.error == 'invite-self' %}
                <div class="alert alert-danger" data-for="email">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    <strong>No no no &hellip;</strong>
                    You can't invite yourself to join your own team.
                </div>
            {% endif %}

            {% if team_invite_get.error == 'invitee-is-a-team-leader' %}
                <div class="alert alert-danger" data-for="email">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    <strong>No no no &hellip;</strong>
                    You can't invite {{ team_invite_get.invitee }}, they already belong
                    to a different team.
                </div>
            {% endif %}

            {% if team_invite_get.error == 'invitee-is-already-on-a-team' %}
                <div class="alert alert-danger" data-for="email">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    <strong>No no no &hellip;</strong>
                    You can't invite {{ team_invite_get.invitee }}, they already belong
                    to a different team.
                </div>
            {% endif %}

            {% if team_invite_get.error == 'invitee-has-a-premium-plan' %}
                <div class="alert alert-danger" data-for="email">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    <p>
                        <strong>Sorry, you can't invite {{ team_invite_get.invitee }}</strong>
                    </p>
                    <p>
                        The person you want to invite has their own paid subscription. People
                        with paid suscriptions can't join teams as it really, really confuses
                        things.
                    </p>
                </div>
            {% endif %}

        {% endif %}
    {% endif %}

    {% if team_invite_resend is defined %}
        {% if team_invite_resend.status == 'success' %}
            <div class="alert alert-success">
                <button type="button" class="close" data-dismiss="alert">×</button>
                <p>
                    <strong>Yay!</strong>
                </p>

                <p>
                    We have re-sent an invite to {{ team_invite_resend.invitee }}.
                </p>

            </div>
        {% endif %}

        {% if team_invite_resend.status == 'error' %}
            {% if team_invite_resend.error == 'invite-self' %}
                <div class="alert alert-danger" data-for="email">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    <strong>No no no &hellip;</strong>
                    You can't invite yourself to join your own team.
                </div>
            {% endif %}

            {% if team_invite_resend.error == 'invitee-is-a-team-leader' %}
                <div class="alert alert-danger" data-for="email">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    <strong>No no no &hellip;</strong>
                    You can't invite {{ team_invite_resend.invitee }}, they already belong
                    to a different team.
                </div>
            {% endif %}

        {% endif %}
    {% endif %}

    <p>
        Invite anyone to join your team. Everyone on your team can sign in independently
        and share this team account.
    </p>

    <form class="issue-invite" role="form" method="post" action="{{ path('action_user_account_team_invitemember') }}">
        <label for="email">Who would you like to invite?</label>
        <div class="input-group">
            <input type="text" class="form-control" name="email" id="email" placeholder="Email address of new team member">
            <span class="input-group-btn">
                <button type="submit" class="btn btn-default" type="button">Send invite</button>
            </span>
        </div>
    </form>

</div>