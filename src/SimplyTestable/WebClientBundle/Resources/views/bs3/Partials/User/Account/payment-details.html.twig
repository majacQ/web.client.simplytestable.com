{% if user_summary.plan.accountplan.name == 'basic' and user_summary.plan.hasTrialPeriodAvailable %}
<p>
    You're on a <strong>free</strong> plan, no payment details needed.
</p>
{% else %}
    {% if user_summary.stripeCustomer.hasActiveCard %}        
        {% if user_summary.stripeCustomer.activeCard.hasCheckFailures %}
            {% include 'SimplyTestableWebClientBundle:bs3/Partials/User/Account/PaymentDetails:payment-summary-card-check-failures.html.twig' %}
        {% endif %}
        {% include 'SimplyTestableWebClientBundle:bs3/Partials/User/Account/PaymentDetails:card-summary.html.twig' %} 
    {% else %}
        {% include 'SimplyTestableWebClientBundle:bs3/Partials/User/Account/PaymentDetails:no-card.html.twig' %} 
    {% endif %}
{% endif %}
