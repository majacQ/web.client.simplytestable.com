{% extends 'SimplyTestableWebClientBundle::bs3/base.html.twig' %}

{% block title %}Results for {% include 'SimplyTestableWebClientBundle:Partials:/url/utf8-schemeless-possibly-truncated-64.html.twig' with {'url': website} %} (#{{test.testId}}) - {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    {% stylesheets
    '@SimplyTestableWebClientBundle/Resources/assets/bs3/css/modal.css'
    '@SimplyTestableWebClientBundle/Resources/assets/bs3/css/full-width.css'
    '@SimplyTestableWebClientBundle/Resources/assets/bs3/css/summary-stats.css'
    '@SimplyTestableWebClientBundle/Resources/assets/bs3/css/test-options.css'
    '@SimplyTestableWebClientBundle/Resources/assets/bs3/css/action-badge.css'
    '@SimplyTestableWebClientBundle/Resources/assets/bs3/css/cookies-options-modal.css'
    '@SimplyTestableWebClientBundle/Resources/assets/bs3/css/test-results.css'
    filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts
    '@SimplyTestableWebClientBundle/Resources/assets/vendor/jquery-scrollto/jquery.scrollTo-1.4.12/jquery.scrollTo.js'
    '@SimplyTestableWebClientBundle/Resources/assets/bs3/js/jQuery/stModal.js'
    '@SimplyTestableWebClientBundle/Resources/assets/bs3/js/jQuery/stFormHelper.js'
    '@SimplyTestableWebClientBundle/Resources/assets/bs3/js/modal.js'
    '@SimplyTestableWebClientBundle/Resources/assets/bs3/js/http-authentication-options-modal.js'
    '@SimplyTestableWebClientBundle/Resources/assets/bs3/js/cookie-options-modal.js'
    '@SimplyTestableWebClientBundle/Resources/assets/bs3/js/test-results.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block body_class %} {{ parent() }} full-width {% endblock %}

{% block body %}
    {{ parent() }}

    <div class="alert-container">
        {% include 'SimplyTestableWebClientBundle:bs3/Partials/Generic/Notification/Conditional:url-limit.html.twig' %}
        {% include 'SimplyTestableWebClientBundle:bs3/Partials/Generic/Notification/Conditional:read-only-test.html.twig' %}
    </div>

    <div class="header">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <span id="device-size-lg"></span>
                    <span id="device-size-md"></span>
                    <span id="device-size-sm"></span>
                    <span id="device-size-xs"></span>

                    <h1>
                        Results for <span id="test-url" title="{{website.raw}}">{% include 'SimplyTestableWebClientBundle:Partials/url:utf8-schemeless-possibly-truncated-50.html.twig' with {'url': website} %}</span>
                        <span id="test-id">(#{{ test.testId }})</span>
                    </h1>

                    <p class="task-type-summary">
                        {% for task_type_key, task_type_name in available_task_types %}

                            {% set is_available = test_options[task_type_key] is defined %}
                            {% set is_selected = is_available and test_options[task_type_key] %}

                            <span class="label {% if is_available %}available{% else %}unavailable{% endif %} {% if is_selected %}selected{% endif %}">
                                {{ task_type_name }}
                            </span>

                        {% endfor %}

                        <span class="collapse-control collapsed link" data-toggle="collapse" data-target="#test-options">
                            Change test options
                            <i class="fa fa-caret-down"></i>
                        </span>
                    </p>

                    <form id="retest-form" role="form" method="post" action="{{ path('test_start') }}">
                        <input type="hidden" name="website" value="{{ test.website }}" />
                        <button id="retest-button" type="submit" class="btn btn-default btn-significant side-action" data-offset="0">
                            <i class="fa fa-refresh"></i>
                            Re-test
                            <span>Using selected settings</span>
                        </button>

                        <div id="test-options" class="collapse">
                            {% include 'SimplyTestableWebClientBundle:bs3/Partials/Test/Options:results-test-options.html.twig' %}
                        </div>

                        {% if test_options['http-authentication'] is defined %}
                            {% include 'SimplyTestableWebClientBundle:bs3/Partials/Test/Options/HttpAuthentication:http-authentication.html.twig' %}
                        {% endif %}

                        {% if test_options['cookies'] is defined %}
                            {% include 'SimplyTestableWebClientBundle:bs3/Partials/Test/Options/Cookies:cookies.html.twig' %}
                        {% endif %}
                    </form>

                    {% if is_owner and is_public_user_test == false %}
                        {% set route = (is_public) ? 'app_test_lock' : 'app_test_unlock' %}
                        {% set icon = (is_public) ? 'lock' : 'unlock' %}
                        {% set label = (is_public) ? 'Lock' : 'Unlock' %}
                        {% set description = (is_public) ? 'Make this test private' : 'Make this test public' %}

                        <form id="lock-unlock" action="{{ path(route, { 'website': test.website, 'test_id': test.testId }) }}">
                            <button id="lock-unlock-button" type="submit" class="btn btn-default btn-significant side-action" data-offset="70">
                                <i class="fa fa-{{ icon }}"></i>
                                {{ label }}
                                <span>{{ description }}</span>
                            </button>
                        </form>
                    {% endif %}

                    <div id="history-link-container" class="history {% if is_owner and is_public_user_test == false %}history-with-owner{% endif %} side-action" data-offset="{{ is_owner and is_public_user_test == false ? '140' : '70' }}">
                        <a href="{{ path('view_test_history_index_index', {'filter': test.website}) }}">
                            {{ domain_test_count }} test{% if domain_test_count != 1%}s{% endif %} for this URL
                            <i class="fa fa-caret-right"></i>
                        </a>
                    </div>

                    {% include 'SimplyTestableWebClientBundle:bs3/Partials/Test/Results/Index:summary-stats.html.twig' %}
                    {% include 'SimplyTestableWebClientBundle:bs3/Partials/Test/Results/Index:summary-prose.html.twig' %}
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            {% if remote_test.taskcount > 0 %}
                <div class="col-lg-12" id="finished-tests">
                    <h2 id="test-list">
                        {% if (filter == 'all' and type is empty) %}
                            All results
                        {% elseif (filter == 'all') %}
                            <span>{{ type_label }}</span> results
                        {% else %}
                            <span>{{ type_label }}</span>
                            {% if filter == 'skipped' or filter == 'cancelled' %}
                                tests that were
                            {% else %}
                                results
                            {% endif %}
                            {{ filter_label|lower }}
                        {% endif %}
                    </h2>

                    {% if (type is not null) %}
                        <a class="clear-type badge" href="{{ path('view_test_results_index_index', { 'website': test.website, 'test_id': test.testId, 'filter': filter }) }}">
                            clear &ldquo;{{ type|replace({'html': 'HTML', 'css': 'CSS', 'js': 'JS'}) }}&rdquo; filter
                            <i class="fa fa-times"></i>
                        </a>
                    {% endif %}

                    {% if tasks is defined %}
                        <ul class="nav nav-tabs {{ filter }}">
                            <li class="tasks-all {% if (filter == 'all') %} active {% endif %}">
                                <a data-target="#test-list" href="{{ path('view_test_results_index_index', { 'website': test.website, 'test_id': test.testId, 'filter': 'all', 'type': type }) }}#test-list">
                                    All <span class="badge">{{ filtered_task_counts.all }}</span>
                                </a>
                            </li>
                            <li class="tasks-with-errors {% if (filter == 'with-errors') %} active {% endif %}">
                                <a data-target="#test-list" href="{{ path('view_test_results_index_index', { 'website': test.website, 'test_id': test.testId, 'filter': 'with-errors', 'type': type }) }}#test-list">
                                    With errors <span class="badge alert-danger">{{ filtered_task_counts.with_errors }}</span>
                                </a>
                            </li>
                            <li class="tasks-with-warnings {% if (filter == 'with-warnings') %} active {% endif %}">
                                <a data-target="#test-list" href="{{ path('view_test_results_index_index', { 'website': test.website, 'test_id': test.testId, 'filter': 'with-warnings', 'type': type }) }}#test-list">
                                    With warnings <span class="badge alert-info">{{ filtered_task_counts.with_warnings }}</span>
                                </a>
                            </li>
                            <li class="tasks-without-errors {% if (filter == 'without-errors') %} active {% endif %}">
                                <a data-target="#test-list" href="{{ path('view_test_results_index_index', { 'website': test.website, 'test_id': test.testId, 'filter': 'without-errors', 'type': type }) }}#test-list">
                                    Without errors <span class="badge alert-success">{{ filtered_task_counts.without_errors }}</span>
                                </a>
                            </li>
                            {% if filtered_task_counts.skipped > 0 %}
                                <li class="tasks-skipped {% if (filter == 'skipped') %} active {% endif %}">
                                    <a data-target="#test-list" href="{{ path('view_test_results_index_index', { 'website': test.website, 'test_id': test.testId, 'filter': 'skipped', 'type': type }) }}#test-list">
                                        Skipped <span class="badge">{{ filtered_task_counts.skipped }}</span>
                                    </a>
                                </li>
                            {% endif %}
                            {% if filtered_task_counts.cancelled > 0 %}
                                <li class="tasks-cancelled {% if (filter == 'cancelled') %} active {% endif %}">
                                    <a data-target="#test-list" href="{{ path('view_test_results_index_index', { 'website': test.website, 'test_id': test.testId, 'filter': 'cancelled', 'type': type }) }}#test-list">
                                        Cancelled <span class="badge">{{ filtered_task_counts.cancelled }}</span>
                                    </a>
                                </li>
                            {% endif %}
                        </ul>
                    {% endif %}

                    {% if tasks is empty %}
                        {% include 'SimplyTestableWebClientBundle:bs3/Partials/Test/Results/Index/TaskList:none.html.twig' %}
                    {% else %}
                        {% include 'SimplyTestableWebClientBundle:bs3/Partials/Test/Results/Index/TaskList:task-list.html.twig' %}
                    {% endif %}


                </div>
            {% endif %}
        </div>
    </div>

{% endblock %}