{% extends 'SimplyTestableWebClientBundle::bs3/User/Account/base.html.twig' %}

{% block body_class %}{% if user_summary.getTeamSummary.isInTeam %}{{ 'in-team' }}{% elseif user_summary.getTeamSummary.hasInvite %}{{ 'has-invite' }}{% else %}{{ 'no-team-no-invite' }}{% endif %}
{% endblock %}

{% block title %}Your team ({{ user.username }}) - {{ parent() }}{% endblock %}
{% block heading %}<a href="{{ path('view_user_account_index_index') }}">{{ parent() }}</a>: your team{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    {% stylesheets
    '@SimplyTestableWebClientBundle/Resources/assets/bs3/css/user-account.css'
    '@SimplyTestableWebClientBundle/Resources/assets/bs3/css/user-account-team.css'
    filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts
    '@SimplyTestableWebClientBundle/Resources/assets/bs3/js/jQuery/stFormErrorHelper.js'
    '@SimplyTestableWebClientBundle/Resources/assets/bs3/js/jQuery/stFormHelper.js'
    '@SimplyTestableWebClientBundle/Resources/assets/bs3/js/form-helper.js'
    '@SimplyTestableWebClientBundle/Resources/assets/bs3/js/user-account-team.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block account_content %}

    <h2>Create your team</h2>

    {% if team_create_error is defined %}
        {% if team_create_error == 'blank-name' %}
            <div class="alert alert-danger" data-for="name">
                <button type="button" class="close" data-dismiss="alert">Ã—</button>
                <strong>Slow down!</strong> You're going to have to choose a name for your team.
            </div>
        {% endif %}
    {% endif %}

    <form role="form" method="post" action="{{ path('action_user_account_team_create') }}">
        <label for="name">Choose a name for your team. Anything you like, must be unique.</label>
        <div class="input-group">
            <input type="text" class="form-control" name="name" id="name">
            <span class="input-group-btn">
                <button type="submit" class="btn btn-default" type="button">Create team</button>
            </span>
        </div>
    </form>

    <p>
        A team is a group of people working together who share an account. Each person in a team can sign in independently.
    </p>

    <p>
        Tests carried out are visible to everyone in a team, allowing you to easily collaborate on testing projects.
    </p>

    <p>
        You can invite people to join your team once it has been created.
    </p>

{% endblock %}